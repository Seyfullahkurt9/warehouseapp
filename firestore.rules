rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Geliştirme aşamasında tüm okuma ve yazma işlemlerine izin ver
    // NOT: Üretim ortamında daha kısıtlayıcı kurallar kullanmanız önerilir
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Daha güvenli seçenek:
    // Kullanıcılar kendileri ile ilgili verileri okuyup yazabilirler
    match /Kullanicilar/{userId} {
      allow read, write: if request.auth != null && 
                         (request.auth.uid == userId || 
                          get(/databases/$(database)/documents/Kullanicilar/$(request.auth.uid)).data.yetki_id == "admin");
    }
    
    // Eylemler koleksiyonu için kurallar
    match /Eylemler/{eylemId} {
      allow read, write: if request.auth != null;
    }
  }
}